{
    "manifest": {
        "$BASE_DIR": "${configdir}",
        "$OUTPUT_DIR": "$BASE_DIR/output"
    },
    "target_simulator": "NEURON",
    "run": {
        "tstart": 0.0,
        "tstop": 400.0,
        "dt": 0.1,
        "dL": 10000000.0,
        "spike_threshold": -15.0,
        "nsteps_block": 5000
    },
    "conditions": {
        "celsius": 34.0,
        "v_init": -75.0
    },
    "inputs": {
        "noise": {
            "input_type": "spikes",
            "module": "sonata",
            "input_file": "input/ext_inp_poisson.h5",
            "node_set": "exc"
        },
        "current_clamp": {
            "input_type": "current_clamp",
            "module": "IClamp",
            "node_set": "pn",
            "amp": 0.6,
            "delay": 0,
            "duration": 3000.0
        },
        "current_clamp2": {
            "input_type": "current_clamp",
            "module": "IClamp",
            "node_set": "pv",
            "amp": 0.2,
            "delay": 0,
            "duration": 3000.0
        }
    },
    "output": {
        "log_file": "log.txt",
        "output_dir": "$OUTPUT_DIR",
        "spikes_file": "spikes.h5"
    },
    "reports": {},
    "node_sets_file": "$BASE_DIR/node_sets.json",
    "network": "$BASE_DIR/circuit_config.json"
}